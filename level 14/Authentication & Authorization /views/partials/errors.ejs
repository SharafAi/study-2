<% if (errors && errors.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-3">
              <ul class="list-disc list-inside">
                <% errors.forEach(function(error) { %>
                  <li><%= error %></li>
                <% }); %>
              </ul>
            </div>
          <% } %>