<%- include('../partials/head') %>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/header') %>

  <main class="flex-grow py-10 px-4">
    <h1 class="text-red-600 text-5xl md:text-6xl lg:text-7xl font-bold text-center mb-12">
      Here are your favourites:
    </h1>

    <% if (FavouriteHomes && FavouriteHomes.length > 0) { %>
      <div class="max-w-6xl mx-auto grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <% FavouriteHomes.forEach((home) => { %>
          <div
            class="bg-white shadow-lg rounded-xl overflow-hidden hover:scale-105 transition-transform duration-300">
            
            <!-- Home Image -->
            <img src="<%= home.photoURL ? home.photoURL : '/images/default.png' %>"
                 alt="<%= home.houseName %>"
                 class="w-full h-48 object-cover"
                 onerror="this.onerror=null; this.src='/images/default.png';" />

            <!-- Card Content -->
            <div class="p-6 border-t border-gray-100">
              <h2 class="text-2xl font-semibold text-gray-900 mb-2">
                <%= home.houseName %>
              </h2>

              <div class="space-y-2 text-gray-700">
                <p><strong>Location:</strong> <%= home.location %></p>
                <p><strong>Price:</strong> $<%= home.price %> / night</p>
                <p class="flex items-center">
                  <strong class="mr-1">Rating:</strong>
                  <span class="text-yellow-400 text-lg mr-1">★</span>
                  <span><%= home.rating %>/10</span>
                </p>
              </div>
            </div>

            <!-- Remove Button -->
            <form action="/favourites/delete/<%= home._id %>" method="POST" class="p-4 bg-gray-50 border-t border-gray-200">
              <button type="submit"
                class="w-full bg-red-500 text-white py-2.5 rounded-lg font-medium hover:bg-red-600 transition-colors duration-200">
                Remove
              </button>
            </form>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center text-gray-600 mt-20">
        <p class="text-xl font-medium">You haven’t added any favourites yet.</p>
      </div>
    <% } %>
  </main>
</body>
</html>