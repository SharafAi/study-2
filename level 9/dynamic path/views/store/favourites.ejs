   <%- include('../partials/head')%>
  </head>
  <body>
    <%- include ('../partials/header')%>
  <!-- quick styled with ai -->
   <main class="bg-gray-100 min-h-screen py-10">
  <h1 class="text-red-600 text-5xl md:text-6xl lg:text-7xl font-bold text-center mb-12">
    Here are your favorites:
  </h1>

  <div class="max-w-4xl mx-auto grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% FavouriteHomes.forEach((home) => { %>
    <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:scale-105 transition-transform duration-300">
      <!-- Home Image -->
  <img src="<%= home.photoURL ? home.photoURL : '/images/default.png' %>"
     alt="<%= home.houseName %>"
     class="w-full h-48 object-cover"
     onerror="this.onerror=null; this.src='/images/default.png';" />
      <!-- Card Content -->
      <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
  <h2 class="text-2xl font-semibold text-gray-900 mb-3"><%= home.houseName %></h2>
  
  <div class="space-y-1.5 text-gray-600">
    <p><strong class="text-gray-800">Location:</strong> <%= home.location %></p>
    <p><strong class="text-gray-800">Price:</strong> $<%= home.price %> / night</p>
    <p class="flex items-center">
      <strong class="text-gray-800 mr-1">Rating:</strong>
      <span class="text-yellow-400 text-lg mr-1">â˜…</span>
      <span class="font-medium text-gray-700"><%= home.rating %>/10</span>
    </p>
  </div>
</div>
      <form action="/favourites/delete/<%= home.id %>" method="POST" style="padding: 10px;">
  <button type="submit" style="
    width: 100%;
    background-color: #e74c3c;
    color: #fff;
    border: none;
    padding: 10px 0;
    border-radius: 8px;
    cursor: pointer;
    font-size: 15px;
    font-weight: 500;
    transition: background-color 0.2s ease;
  ">
    Remove
  </button>
</form>
    </div>
  <% }) %>
</div>

  

</main>

  </body>
</html>
