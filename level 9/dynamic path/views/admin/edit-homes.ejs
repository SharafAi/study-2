<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-100 min-h-screen">

    <%- include('../partials/header') %>

      <main class="max-w-lg mx-auto mt-10 p-10 border-4 border-blue-400 rounded-xl bg-gray-50 shadow-lg">
        <h1 class="text-2xl font-bold text-green-700 mb-6 text-center">
          <%= editing ? "Edit" : "Rergister" %>
            your home here:
        </h1>

        <form action="<%= editing ? '/edit-home' : '/add-home' %>" method="POST" class="flex flex-col gap-4">

          <input 
          type="text" 
          name="houseName" 
          value="<%= editing ? home.houseName : ''%>"
          placeholder="Home address"
          class="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required />

          <input 
           type="text" 
           name="price" 
           value="<%= editing ? home.price : ''%>"
           placeholder="Price per night"
           class="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
           required />

          <input 
           type="text" 
           name="location" 
           value="<%= editing ? home.location : ''%>"
           placeholder="Location"
           class="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
           required />

          <input 
           type="text" 
           name="rating" 
           value="<%= editing ? home.rating : ''%>"
           placeholder="Rating"
           class="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
           required />

          <input 
           type="text" 
           name="photoURL" 
           value="<%= editing ? home.photoURL : ''%>"
           placeholder="Enter photo URL"
           class="p-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
            required />

          <input type="submit" value="<%= editing ? 'Update' : 'Submit'%>"
            class="bg-blue-500 text-white font-semibold py-3 rounded-lg hover:bg-blue-600 transition-colors duration-300" />

        </form>
      </main>

  </body>

  </html>