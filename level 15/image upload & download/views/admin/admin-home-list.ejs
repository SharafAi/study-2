<%- include('../partials/head') %>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/header') %>

  <main class="flex-grow py-10 px-4">
    <h1 class="text-gray-800 text-3xl md:text-4xl font-bold text-center mb-10">
      Your Listed Homes
    </h1>

    <% if (RergisterdHomes && RergisterdHomes.length > 0) { %>
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6">

          <% RergisterdHomes.forEach((home) => { %>
            <div class="bg-white shadow-md rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300 relative">

              <!-- Home Image -->
              <div class="w-full aspect-[1/1] overflow-hidden">
                <img src="<%= home.photo ? home.photo : '/images/default.png' %>" 
                     alt="<%= home.houseName %>" 
                     class="w-full h-full object-contain bg-gray-100" 
                     onerror="this.onerror=null; this.src='/images/default.png';" />
              </div>

              <!-- Card Content -->
              <div class="p-2 flex flex-col">
                <h2 class="text-xs font-semibold text-gray-800 truncate">
                  <%= home.houseName %>
                </h2>
                <p class="text-[10px] text-gray-500 truncate">
                  <%= home.location %>
                </p>
                <p class="text-[10px] text-yellow-500 font-bold">
                  ⭐ <%= home.rating %>/10
                </p>

                <!-- Edit/Delete Buttons -->
                <div class="mt-2 flex gap-1">
                  <a href="/edit-homes/<%= home._id %>?editing=true"
                     class="flex-1 text-center bg-blue-600 hover:bg-blue-700 text-white text-[10px] font-semibold py-1 rounded-lg transition transform hover:scale-105">
                    Edit
                  </a>

                  <form action="/delete-home/<%= home._id %>" method="POST" class="flex-1">
                    <button type="submit"
                      class="w-full bg-red-600 hover:bg-red-700 text-white text-[10px] font-semibold py-1 rounded-lg transition transform hover:scale-105">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>

        </div>
      </div>
    <% } else { %>
      <div class="text-center text-gray-600 mt-20">
        <p class="text-xl font-medium">You haven’t added any homes yet.</p>
      </div>
    <% } %>
  </main>

</body>
</html>