<%- include('../partials/head')%>
  </head>

  <body>
    <%- include ('../partials/header')%>
      <!-- quick styled with ai -->
      <main class="bg-gray-100 min-h-screen py-10">
        <h1 class="text-red-600 text-5xl md:text-6xl lg:text-7xl font-bold text-center mb-12">
          you are in home details page
        </h1>
        <div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
          <!-- Home Image -->
          <img src="<%= home.photo ? home.photo : '/images/default.png' %>" alt="<%= home.houseName %>"
            class="w-full h-48 object-cover" onerror="this.onerror=null; this.src='/images/default.png';" />

          <!-- Home Details -->
          <div class="p-8 space-y-4">
            <h1 class="text-3xl font-bold text-gray-800">
              <%= home.houseName %>
            </h1>
            <p class="text-gray-700"><span class="font-semibold">Location:</span>
              <%= home.location %>
            </p>
            <p class="text-gray-700"><span class="font-semibold">Price:</span> $<%= home.price %> / night</p>
            <p class="text-yellow-500 font-semibold"><span class="font-semibold">Rating:</span>
              <%= home.rating %>/10
            </p>

            <!-- Additional details section (optional) -->
            <p class="text-gray-600 mt-4">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et
              dolore magna aliqua.
            </p>

            <div class="flex gap-4 mt-6">
              <a href="/book/<%= home._id %>"
                class="bg-pink-500 text-white px-6 py-3 rounded-xl hover:bg-pink-600 transition">Book Now</a>
              <a href="/homes" class="bg-gray-300 text-gray-800 px-6 py-3 rounded-xl hover:bg-gray-400 transition">Back
                to List</a>
            </div>
            <div>
              <%- include ('../partials/favourites')%>
            </div>
          </div>
        </div>

      </main>

  </body>

  </html>